{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Master Catalog Schema",
  "required": [
    "version",
    "catalog_type",
    "metadata"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^2\\.\\d+$"
    },
    "catalog_type": {
      "type": "string",
      "enum": [
        "master"
      ]
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "required": [
        "total_providers",
        "total_categories",
        "total_solutions"
      ],
      "properties": {
        "total_providers": {
          "type": "integer",
          "minimum": 0
        },
        "total_categories": {
          "type": "integer",
          "minimum": 0
        },
        "total_solutions": {
          "type": "integer",
          "minimum": 0
        },
        "last_updated": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "provider_catalogs": {
      "type": "object",
      "patternProperties": {
        "^[a-z]+$": {
          "type": "string",
          "pattern": "^\\./providers/[a-z]+\\.yml$"
        }
      }
    },
    "category_catalogs": {
      "type": "object",
      "patternProperties": {
        "^[a-z-]+$": {
          "type": "string",
          "pattern": "^\\./categories/[a-z-]+\\.yml$"
        }
      }
    }
  }
}