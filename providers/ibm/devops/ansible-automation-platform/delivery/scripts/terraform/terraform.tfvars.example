# IBM Ansible Automation Platform - Terraform Variables Example
# Copy this file to terraform.tfvars and customize for your environment

# Project Configuration
project_name = "ansible-automation-platform"
environment = "prod"

# OpenShift Configuration
openshift_cluster_name = "production-cluster"
openshift_namespace = "ansible-automation"
domain_name = "automation.company.com"

# Platform Configuration
aap_version = "2.4"
automation_controller_replicas = 3
automation_hub_replicas = 2
eda_controller_replicas = 2

# Resource Configuration
storage_class = "gp3-csi"
database_storage_size = "100Gi"
projects_storage_size = "50Gi"
hub_storage_size = "100Gi"

# Security Configuration
enable_custom_certificates = true
certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# Integration Configuration
enable_saml_auth = true
saml_entity_id = "https://controller.automation.company.com"
saml_idp_url = "https://idp.company.com/sso"

# Monitoring Configuration
enable_monitoring = true
enable_grafana_dashboard = true
metrics_retention_days = 7

# Backup Configuration
enable_backup = true
backup_schedule = "0 2 * * *"
backup_retention_days = 30
s3_backup_bucket = "automation-platform-backups"

# High Availability Configuration
enable_ha = true
enable_cluster_autoscaling = false

# Network Configuration
allowed_cidr_blocks = [
  "10.0.0.0/16",
  "192.168.0.0/16"
]

# Tags
common_tags = {
  Environment = "production"
  Project     = "ansible-automation-platform"
  Owner       = "platform-engineering"
  CostCenter  = "engineering"
}