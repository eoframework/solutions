#------------------------------------------------------------------------------
# Prometheus Alert Rules - Generated by Ansible
# DGX SuperPOD Monitoring Alerts
#------------------------------------------------------------------------------

groups:
  #----------------------------------------------------------------------------
  # GPU Alerts
  #----------------------------------------------------------------------------
  - name: gpu_alerts
    rules:
      - alert: GPUHighTemperature
        expr: DCGM_FI_DEV_GPU_TEMP > {{ monitoring.gpu_temp_alert_threshold }}
        for: 5m
        labels:
          severity: warning
        annotations:
          summary: "GPU temperature high on {{ '{{ $labels.instance }}' }}"
          description: "GPU {{ '{{ $labels.gpu }}' }} temperature is {{ '{{ $value }}' }}°C"

      - alert: GPUCriticalTemperature
        expr: DCGM_FI_DEV_GPU_TEMP > 90
        for: 1m
        labels:
          severity: critical
        annotations:
          summary: "GPU critical temperature on {{ '{{ $labels.instance }}' }}"
          description: "GPU {{ '{{ $labels.gpu }}' }} temperature is {{ '{{ $value }}' }}°C - thermal throttling imminent"

      - alert: GPUHighMemoryUsage
        expr: (DCGM_FI_DEV_FB_USED / DCGM_FI_DEV_FB_TOTAL) * 100 > {{ monitoring.gpu_memory_alert_threshold }}
        for: 5m
        labels:
          severity: warning
        annotations:
          summary: "GPU memory usage high on {{ '{{ $labels.instance }}' }}"
          description: "GPU {{ '{{ $labels.gpu }}' }} memory usage is {{ '{{ $value }}' }}%"

      - alert: GPUXIDError
        expr: DCGM_FI_DEV_XID_ERRORS > 0
        for: 1m
        labels:
          severity: critical
        annotations:
          summary: "GPU XID error on {{ '{{ $labels.instance }}' }}"
          description: "GPU {{ '{{ $labels.gpu }}' }} reported XID error {{ '{{ $value }}' }}"

      - alert: GPUPowerLimit
        expr: DCGM_FI_DEV_POWER_USAGE > DCGM_FI_DEV_POWER_LIMIT * 0.95
        for: 5m
        labels:
          severity: warning
        annotations:
          summary: "GPU approaching power limit on {{ '{{ $labels.instance }}' }}"
          description: "GPU {{ '{{ $labels.gpu }}' }} power usage {{ '{{ $value }}' }}W"

  #----------------------------------------------------------------------------
  # Node Alerts
  #----------------------------------------------------------------------------
  - name: node_alerts
    rules:
      - alert: NodeDown
        expr: up{job="node-exporter"} == 0
        for: 2m
        labels:
          severity: critical
        annotations:
          summary: "DGX node {{ '{{ $labels.instance }}' }} is down"
          description: "Node exporter on {{ '{{ $labels.instance }}' }} is not responding"

      - alert: HighCPUUsage
        expr: 100 - (avg by(instance) (rate(node_cpu_seconds_total{mode="idle"}[5m])) * 100) > 90
        for: 10m
        labels:
          severity: warning
        annotations:
          summary: "High CPU usage on {{ '{{ $labels.instance }}' }}"
          description: "CPU usage is {{ '{{ $value }}' }}%"

      - alert: HighMemoryUsage
        expr: (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100 > 90
        for: 5m
        labels:
          severity: warning
        annotations:
          summary: "High memory usage on {{ '{{ $labels.instance }}' }}"
          description: "Memory usage is {{ '{{ $value }}' }}%"

      - alert: DiskSpaceLow
        expr: (node_filesystem_avail_bytes{mountpoint="/"} / node_filesystem_size_bytes{mountpoint="/"}) * 100 < 10
        for: 5m
        labels:
          severity: warning
        annotations:
          summary: "Low disk space on {{ '{{ $labels.instance }}' }}"
          description: "Only {{ '{{ $value }}' }}% disk space remaining"

  #----------------------------------------------------------------------------
  # InfiniBand Alerts
  #----------------------------------------------------------------------------
  - name: infiniband_alerts
    rules:
      - alert: InfiniBandPortDown
        expr: node_infiniband_state{state="port_active"} == 0
        for: 2m
        labels:
          severity: critical
        annotations:
          summary: "InfiniBand port down on {{ '{{ $labels.instance }}' }}"
          description: "IB port {{ '{{ $labels.port }}' }} is not active"

  #----------------------------------------------------------------------------
  # Slurm Alerts
  #----------------------------------------------------------------------------
  - name: slurm_alerts
    rules:
      - alert: SlurmNodeDrain
        expr: slurm_node_state{state="drain"} > 0
        for: 5m
        labels:
          severity: warning
        annotations:
          summary: "Slurm node in DRAIN state"
          description: "Node {{ '{{ $labels.node }}' }} is in DRAIN state"

      - alert: SlurmNodeDown
        expr: slurm_node_state{state="down"} > 0
        for: 2m
        labels:
          severity: critical
        annotations:
          summary: "Slurm node DOWN"
          description: "Node {{ '{{ $labels.node }}' }} is DOWN"
