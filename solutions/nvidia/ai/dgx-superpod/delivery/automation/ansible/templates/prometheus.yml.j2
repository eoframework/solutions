#------------------------------------------------------------------------------
# Prometheus Configuration - Generated by Ansible
# DGX SuperPOD Monitoring
#------------------------------------------------------------------------------

global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    cluster: '{{ cluster.name }}'

#------------------------------------------------------------------------------
# Alerting Configuration
#------------------------------------------------------------------------------
alerting:
  alertmanagers:
    - static_configs:
        - targets: []

#------------------------------------------------------------------------------
# Rule Files
#------------------------------------------------------------------------------
rule_files:
  - /etc/prometheus/alerts.yml

#------------------------------------------------------------------------------
# Scrape Configurations
#------------------------------------------------------------------------------
scrape_configs:
  #----------------------------------------------------------------------------
  # Prometheus Self-Monitoring
  #----------------------------------------------------------------------------
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  #----------------------------------------------------------------------------
  # NVIDIA DCGM Exporter (GPU Metrics)
  #----------------------------------------------------------------------------
  - job_name: 'dcgm-exporter'
    static_configs:
      - targets:
{% for host in groups['dgx_nodes'] | default([]) %}
          - '{{ hostvars[host].ansible_host | default(host) }}:9400'
{% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: instance
        regex: '([^:]+):\d+'
        replacement: '${1}'

  #----------------------------------------------------------------------------
  # Node Exporter (System Metrics)
  #----------------------------------------------------------------------------
  - job_name: 'node-exporter'
    static_configs:
      - targets:
{% for host in groups['dgx_nodes'] | default([]) %}
          - '{{ hostvars[host].ansible_host | default(host) }}:9100'
{% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: instance
        regex: '([^:]+):\d+'
        replacement: '${1}'

  #----------------------------------------------------------------------------
  # Slurm Exporter (Job Metrics)
  #----------------------------------------------------------------------------
  - job_name: 'slurm-exporter'
    static_configs:
      - targets:
{% for host in groups['slurm_controllers'] | default([]) %}
          - '{{ hostvars[host].ansible_host | default(host) }}:9341'
{% endfor %}
