# AWS Intelligent Document Processing - Example Terraform Variables
# Copy this file to terraform.tfvars and customize the values

# AWS Configuration
aws_region = "us-east-1"
environment = "dev"

# Project Configuration
project_name = "intelligent-doc-processing"
document_bucket_name = "your-company-intelligent-docs-dev-20240101"

# Lambda Configuration
lambda_memory_size = 512
lambda_timeout = 300

# SQS Configuration
sqs_message_retention_seconds = 86400

# Feature Flags
enable_textract_async = true
enable_comprehend = true
enable_kendra = false

# Document Processing Configuration
allowed_file_types = ["pdf", "png", "jpg", "jpeg", "tiff"]
max_document_size_mb = 10

# Resource Tags
default_tags = {
  Project     = "intelligent-document-processing"
  Environment = "dev"
  Owner       = "platform-team"
  ManagedBy   = "terraform"
  CostCenter  = "engineering"
  Compliance  = "standard"
}