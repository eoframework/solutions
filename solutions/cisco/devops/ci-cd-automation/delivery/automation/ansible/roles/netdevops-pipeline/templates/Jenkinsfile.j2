// Jenkins Pipeline for Cisco Network Automation
// Generated by NetDevOps Pipeline role

pipeline {
    agent {
        label '{{ gitlab_runner_tag | default("cisco-automation") }}'
    }

    options {
        timeout(time: {{ pipeline_timeout | default(3600) }}, unit: 'SECONDS')
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '30'))
    }

    stages {
        stage('Validate') {
            steps {
                echo 'Validating Ansible syntax...'
                sh 'ansible-playbook --syntax-check playbooks/*.yml'
                sh 'ansible-lint playbooks/*.yml || true'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing in lab environment...'
                sh 'ansible-playbook -i inventory/test/hosts.yml playbooks/validation.yml --check'
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                input message: 'Deploy to production?', ok: 'Deploy'
                echo 'Deploying to production...'
                sh 'ansible-playbook -i inventory/prod/hosts.yml playbooks/site.yml'
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'logs/**/*.log', allowEmptyArchive: true
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
